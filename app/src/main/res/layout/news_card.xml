<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:background="@color/new_background"
android:padding="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/article_image"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginEnd="12dp"
        tools:src="@drawable/ic_launcher_foreground"
        android:background="@color/on_secondary" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/secondary_text_color"
            tools:text="BBC news"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Новость об очень важном происшествии"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/on_primary"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text_color"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            tools:text="Произошло очень важное происшествие требующее всеобщего внимательного внимания!" />

        <TextView
            android:id="@+id/published_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/secondary_text_color"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="12.01.2024" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>